#!/usr/bin/env bash
# Init script to manage the manage_my_process daemon

PIDFILE="/var/run/my_process.pid"

start_process() {
    ./manage_my_process &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        kill "$PID" 2>/dev/null
        rm -f "$PIDFILE"
    fi
    echo "manage_my_process stopped"
}

restart_process() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        kill "$PID" 2>/dev/null
        rm -f "$PIDFILE"
    fi
    ./manage_my_process &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
